
<div class="banner-cocktail" style="background-image:linear-gradient(-225deg, rgba(168,101,0,0.5) 0%, rgba(0,36,61,0.5) 50%), url(<%= image_url @cocktail.picture %>)">
</div>

<div class="container ">
<h3><%= @cocktail.name %></h3>
<hr>
<h4>Ingredients</h4>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> - <%= dose.description %><%= link_to dose_path(dose), method: :delete, data: {confirm: "are you sure asshole"} do %>  <i class="fas fa-trash-alt"></i></li> <%end%>
  <%end%>
</ul>
<h3>Add a new dose</h3>
<hr>


<div class="container">
  <div class="col-sm-offset-2 col-sm-8">
  <%= simple_form_for [ @cocktail, @dose]  do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient, prompt: true %>
    <%= f.submit "add a new dose", class: "btn btn-primary col-sm-offset-4  col-sm-4" %>
  <% end %>
  </div>
</div>

